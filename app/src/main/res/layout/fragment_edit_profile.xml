<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.exomatik.zcodex.ui.main.editProfile.EditProfileFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="com.exomatik.zcodex.ui.main.editProfile.EditProfileViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CustomStyle"
        android:background="@color/white"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                snackbar="@{viewModel.message}"
                android:orientation="vertical"
                android:paddingStart="@dimen/h2"
                android:paddingEnd="@dimen/h2"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFoto"
                    style="@style/cardView"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_150"
                    android:layout_height="@dimen/_200"
                    android:layout_margin="@dimen/h2">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_150"
                            android:layout_height="@dimen/_160"
                            android:background="@color/gray12"
                            android:src="@drawable/ic_camera_white"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/imgFoto"
                            android:scaleType="centerCrop"
                            imageBoxSrc="@{viewModel.foto.toString()}"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="@string/foto_profil"
                            android:layout_marginTop="@dimen/h2"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etUsername"
                    style="@style/customEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h3"
                    android:hint="@string/username"
                    android:textColorHint="@color/gray2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_username_gray"
                        android:drawablePadding="@dimen/h2"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:text="@={viewModel.username}"
                        android:textSize="@dimen/text_h3"
                        android:focusable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPhone"
                    style="@style/customEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h3"
                    android:hint="@string/no_handphone"
                    android:textColorHint="@color/gray2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phone_gray"
                        android:drawablePadding="@dimen/h2"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:text="@={viewModel.phoneNumber}"
                        android:textSize="@dimen/text_h3"
                        android:focusable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etNama"
                    style="@style/customEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h3"
                    android:hint="@string/nama_lengkap_sesuai_nama_di_rekening_bank"
                    android:textColorHint="@color/gray2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_gray"
                        android:drawablePadding="@dimen/h2"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:text="@={viewModel.namaLengkap}"
                        android:textSize="@dimen/text_h3"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etBank"
                    style="@style/customEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h3"
                    android:hint="@string/nomor_rekening"
                    android:textColorHint="@color/gray2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_rekening_gray"
                        android:drawablePadding="@dimen/h2"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:text="@={viewModel.nomorRekening}"
                        android:textSize="@dimen/text_h3"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:background="@drawable/border_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60"
                    android:layout_marginTop="@dimen/h4"
                    android:layout_marginBottom="@dimen/h2"
                    android:paddingLeft="@dimen/h2"
                    android:paddingRight="@dimen/h2"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/spinnerBank"
                        android:dropDownSelector="@drawable/ic_spinner_gray"
                        android:background="@drawable/spinner_bg_white"
                        />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    style="@style/buttonStandardBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etUsername"
                    android:layout_margin="@dimen/h5"
                    android:padding="@dimen/h3"
                    android:text="@string/simpan"
                    android:textColor="@color/white"
                    android:onClick="@{()-> viewModel.onClickSave()}"
                    disableButton="@{viewModel.isShowLoading}"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            visible="@{viewModel.isShowLoading}"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</layout>